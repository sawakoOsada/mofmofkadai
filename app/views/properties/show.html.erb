<p id="notice"><%= notice %></p>

<p><strong>物件名：</strong><%= @property.name %></p>
<p><strong>賃料：</strong><%= @property.price %>円</p>
<p><strong>住所：</strong><%= @property.address %></p>
<p><strong>築年数 </strong><%= @property.years %>年</p>
<p><strong>備考 </strong><%= @property.etc %></p>

<hr>

<% if @stations.any? %>
<% station_number = 0 %>
  <% @stations.each do |station| %>
    <% station_number += 1 %>
    <h2>最寄り駅<%= station_number %> </h2>
    <p><strong>路線名：</strong><%= station.route_name %></p>
    <p><strong>駅名：</strong><%= station.station_name %></p>
    <p><strong>徒歩分数：</strong><%= station.minutes %>分</p>
  <% end %>
<% end %>

